# Default flags to build optimized version

# for normal build
cmake . -DCMAKE_CXX_FLAGS="-O3 -g -Wall"

# for static build (broken with MPI support)
cmake . -DCMAKE_CXX_FLAGS="-O3 -g -Wall -static"

# for debug
cmake . -DCMAKE_CXX_FLAGS="-O0 -g -Wall -DDEBUG"

# for profile
cmake . -DCMAKE_CXX_FLAGS="-O3 -g -pg -Wall"

# no openmp
cmake . -DCMAKE_CXX_FLAGS="-O3 -g -Wall " -DDISABLE_OPENMP=1
