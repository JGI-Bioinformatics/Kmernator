# Default flags to build optimized version

# for normal build
cmake . -DCMAKE_CXX_FLAGS="-O3 -g -Wall"

# for static build
cmake . -DCMAKE_CXX_FLAGS="-O3 -g -Wall -static"

# for debug
cmake . -DCMAKE_CXX_FLAGS="-O0 -g -Wall -static -DDEBUG"

# for profile
cmake . -DCMAKE_CXX_FLAGS="-O3 -g -pg -static -Wall"

# no openmp
cmake . -DCMAKE_CXX_FLAGS="-O3 -g -Wall -static " -DDISABLE_OPENMP=1
